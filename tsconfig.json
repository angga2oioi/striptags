{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",

        "rootDirs": ["src", "tests"],
        "outDir": "dist",

        "strict": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "moduleResolution": "node",
        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
